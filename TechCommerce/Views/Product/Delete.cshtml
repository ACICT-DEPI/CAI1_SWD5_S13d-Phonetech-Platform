@{
    ViewData["Title"] = "Delete";
}

<h1>Warning: Delete Product</h1>

<h3>Are you sure you want to delete this student?</h3>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Years in Department:</strong> @Model.YearsInDepartment</p>
</div>

<form method="post" asp-action="SaveDelete" asp-controller="Student" asp-route-id="@Model.Id">
    <input type="submit" value="Yes, Delete" class="btn btn-danger" />
    <a asp-action="ShowAll" class="btn btn-secondary">No, Cancel</a>
</form>
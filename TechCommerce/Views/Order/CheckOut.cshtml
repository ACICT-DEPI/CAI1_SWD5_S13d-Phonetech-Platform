@model List<Address>

<div class="container">
    <h2 class="my-4">Select a Shipping Address</h2>
    <a asp-action="AddAddress" asp-controller="User" asp-route-returnUrl="@Url.Action("CheckOut", "Order")" class="btn btn-primary">Add Address</a>

    <div class="row">
        @if (Model.Count == 0)
        {
            <h5>No stored Addresses found</h5>
        }
        else
        {
            foreach(var item in Model)
            {
                <!-- Address Card 1 -->
                <div class="col-md-4 address-card">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                @item.MainSt<br>
                                @item.City<br>
                                @item.Country
                            </p>
                            <a asp-controller="Order" asp-action="PaymentMethod" asp-route-id="@item.Id" asp-route-mainst="@item.MainSt" asp-route-City="@item.City" class="btn btn-primary">Select</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
